<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div>
      <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
        Sign in to your account
      </h2>
    </div>

    <% if flash[:alert] %>
      <div class="bg-red-50 border-l-4 border-red-400 p-4 rounded">
        <div class="flex">
          <div class="ml-3">
            <p class="text-sm text-red-700"><%= flash[:alert] %></p>
          </div>
        </div>
      </div>
    <% end %>

    <% if flash[:notice] %>
      <div class="bg-green-50 border-l-4 border-green-400 p-4 rounded">
        <div class="flex">
          <div class="ml-3">
            <p class="text-sm text-green-700"><%= flash[:notice] %></p>
          </div>
        </div>
      </div>
    <% end %>

    <%= form_with url: session_path, class: "mt-8 space-y-6" do |form| %>
      <div class="rounded-md shadow-sm -space-y-px">
        <div>
          <%= form.email_field :email_address,
              required: true,
              autofocus: true,
              autocomplete: "username",
              placeholder: "Email address",
              value: params[:email_address],
              class: "appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-sm" %>
        </div>
        <div>
          <%= form.password_field :password,
              required: true,
              autocomplete: "current-password",
              placeholder: "Password",
              maxlength: 72,
              class: "appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-sm" %>
        </div>
      </div>

      <div class="flex items-center justify-between">
        <div class="text-sm">
          <%= link_to "Forgot password?", new_password_path, class: "font-medium text-blue-600 hover:text-blue-500" %>
        </div>
      </div>

      <div>
        <%= form.submit "Sign in", class: "btn btn-primary w-full" %>
      </div>
    <% end %>
  </div>
</div>
